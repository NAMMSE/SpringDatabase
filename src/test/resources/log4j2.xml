<?xml version="1.0" encoding="UTF-8"?>
<!-- 0809 -->
<Configuration status="off">
    <Appenders>
        <Console name="ConsoleAppender" target="SYSTEM_OUT"><!-- [%C] %-5level %logger{36} - %msg -->
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" /> <!-- 0805 로그 너무 길어서 저거 주석처리함 -->
        </Console>
        <!-- 0816 log4jdbc 추가 -->
        <File name="log4jdbc_file" fileName="log4jdbc.out">
      		<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %level - %m%n%ex%n"/>
    	</File>
    </Appenders>
    
    <Loggers>
        <Root level="off">
            <AppenderRef ref="ConsoleAppender" />
        </Root>
        <!-- 0816 log4jdbc 추가 -->
        <logger name="log4jdbc.log4j2" level="info" additivity="false">
     <!--  <appender-ref ref="log4jdbc_file"/>  -->
     	<appender-ref ref="ConsoleAppender"/>
      </logger>
    </Loggers>
</Configuration>

