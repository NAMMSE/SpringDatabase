<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ezen.database.mapper.EmployeeMapperXML">
  <select id="getList" resultType="com.ezen.database.dto.Employee">
    	select * from employees
  </select>
  <select id="getListByDept" resultType="com.ezen.database.dto.Employee"> <!-- 이것만으로 mybatis가 알아서 해당 쿼리문 결과를 반환해준다  / resultType 적어줘야된다-->
  		select * from employees where department_id = #{department_id}
  </select>
</mapper>